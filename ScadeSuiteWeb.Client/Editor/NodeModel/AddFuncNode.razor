@using Blazor.Diagrams.Components.Renderers
@using Blazor.Diagrams.Core.Models


<svg width="100" height="60" xmlns="http://www.w3.org/2000/svg">
    <!-- Draw the rectangle -->
    <rect x="30" y="20" width="60" height="40" style="fill:lightblue;stroke:black;stroke-width:1" />

    <!-- Draw the input lines -->
    <line x1="20" y1="30" x2="30" y2="30" style="stroke:black;stroke-width:1" />
    <line x1="20" y1="50" x2="30" y2="50" style="stroke:black;stroke-width:1" />

    <!-- Draw the output line -->
    <line x1="90" y1="40" x2="100" y2="40" style="stroke:black;stroke-width:1" />

    <!-- Draw the plus sign inside the rectangle -->
    <line x1="55" y1="35" x2="55" y2="45" style="stroke:black;stroke-width:1" />
    <line x1="50" y1="40" x2="60" y2="40" style="stroke:black;stroke-width:1" />

    <!-- Draw the AVG text in the center of the rectangle -->
    <text x="35" y="35" font-family="Arial" font-size="14" fill="black">Add</text>
    
</svg>

<PortRenderer @key="'r'" Port="Node.GetPort(PortAlignment.Right)">
    <circle  cx="110" cy="40" r="10" fill="red"  />
</PortRenderer>


    
<PortRenderer @key="'t'" Port="Node.GetPort(PortAlignment.BottomLeft)">
        <circle class="hand" cx="20" cy="30" r="5" fill="red" />
</PortRenderer>
    
    
<PortRenderer @key="'l'" Port="Node.GetPort(PortAlignment.Left)">
        <circle class="hand" cx="20" cy="50" r="5" fill="red" />
</PortRenderer>
    
@code{

    [Parameter] public AddFuncNodeModel Node { get; set; } = null!;

}
