@typeparam TItem

@if (Item is SdyFolder folder)
{
    <FluentTreeItem Text="@folder.Name" Data="Item as SdyFolder">
        <FluentIcon Value="@(new Icons.Regular.Size20.Folder())" Color="@Color.Neutral" Slot="start" />
        @foreach (var subItem in folder.Elements)
        {
            if (subItem is SdyFolder || subItem is SdyFileRef)
            {
                <TreeItem TItem="object" Item="subItem" />
            }
        }
    </FluentTreeItem>
}
else if (Item is SdyFileRef fileRef)
{
    <FluentTreeItem Text="@fileRef.PersistAs" Data="Item as SdyFileRef">
        <FluentIcon Value="@(new Icons.Regular.Size20.Document())" Color="@Color.Neutral" Slot="start"/>
    </FluentTreeItem>
}

@code {
    [Parameter]
    public TItem Item { get; set; }
}